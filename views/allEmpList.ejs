<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <h1>Employee List</h1>
</head>
<style>
    th, td {
        text-align: center;
        vertical-align: middle;
        border: 1px solid lightgrey;
        padding: 5px;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function() {
    
});
</script>

<body>
    <table style="">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Designation</th>
            <th>Action</th>
        </tr>
        <% employees.forEach(emp => { %>
            <tr>
                <td><%= emp.uID %></td>
                <td><%= emp.name %></td>
                <td><%= emp.phone %></td>
                <td><%= emp.gender %></td>
                <td><%= emp.designation %></td>
                <td><button onclick="location.href = '/admin/update/<%-emp.uID%>'">Update</button><button onclick="location.href = '/admin/delete/<%-emp.uID%>'">Delete</button></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>